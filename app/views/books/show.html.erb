<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<td>
						<% if @book.favorited_by?(current_user) %>
						    <%= link_to book_favorites_path(@book), method: :delete do %>
						      <i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
						      <%= @book.favorites.count %>
						    <% end %>
						<% else %>
						    <%= link_to book_favorites_path(@book), method: :post do %>
						      <i class="fa fa-heart-o" aria-hidden="true"></i>
						      <%= @book.favorites.count %>
						    <% end %>
						<% end %>
					</td>
					<td>コメント数：<%= @book.book_comments.count %></td>
					<% if @book.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			<Destroy
			<div class="container">
			<div class="row">
			<div class="col-xs-9">
				<%= form_for [@book, @newcomment] do |f| %>
				    <%= f.text_area :content, rows:'5', class: "form-control" %>
				    <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20" %>
				<% end %>
			</div>
			</div>
			</div>
			<div class="container">
			<div class="row">
			<div class="col-xs-9">
				<h2>Comments</h2>
				<table class="table">
					<% @comments.each do |comment| %>
					<tr>
						<td><%= comment.user.name %></td>
						<td><%= comment.content %></td>
						<td>
						<% if comment.user == current_user %>
						<%= link_to book_comment_path(comment.id), method: :delete do %>
						削除
						<% end %>
						<% end %>
						</td>
					</tr>
					<% end %>
				</table>
			</div>
			</div>
			</div>

	</div>
</div>

</div>